# Core Configuration (required)
FIRESTORE_PROJECT_ID=your-gcp-project-id
FIRESTORE_DATABASE_ID=github-slack-notifier
SLACK_BOT_TOKEN=xoxb-your-slack-bot-token
GITHUB_WEBHOOK_SECRET=your-github-webhook-secret
SLACK_SIGNING_SECRET=your-slack-signing-secret
API_ADMIN_KEY=some-random-long-string

# Cloud Tasks Configuration (required for async processing)
GOOGLE_CLOUD_PROJECT=your-gcp-project-id
WEBHOOK_WORKER_URL=https://your-service-url.run.app/process-webhook
GCP_REGION=europe-west1  # default: europe-west1
CLOUD_TASKS_QUEUE=webhook-processing  # default: webhook-processing

# Server Configuration (optional)
PORT=8080  # default: 8080
GIN_MODE=debug  # default: debug (options: debug, release, test)
LOG_LEVEL=info  # default: info (options: debug, info, warn, error)
SERVER_READ_TIMEOUT=30s  # default: 30s
SERVER_WRITE_TIMEOUT=30s  # default: 30s
SERVER_SHUTDOWN_TIMEOUT=30s  # default: 30s

# Processing Configuration (optional)
ENABLE_ASYNC_PROCESSING=true  # default: true (recommended for production)
WEBHOOK_PROCESSING_TIMEOUT=5m  # default: 5m
SLACK_TIMESTAMP_MAX_AGE=5m  # default: 5m (for request signature validation)

# Development environment variables
NGROK_DOMAIN=something.eu.ngrok.io

# Emoji customization (optional)
EMOJI_APPROVED=white_check_mark
EMOJI_CHANGES_REQUESTED=arrows_counterclockwise
EMOJI_COMMENTED=speech_balloon
EMOJI_MERGED=tada
EMOJI_CLOSED=x
EMOJI_DISMISSED=wave
